<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hadila" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_slate_blue</item>
        <item name="colorPrimaryVariant">@color/beauty_bush</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/transparent_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomTextViewContent" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_mono_thin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@color/light_slate_blue</item>
    </style>
    <style name="EmptyListText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">21sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>